
@inject IProductService ProductService


<div class="row">
    @if (ProductService.Products.Count > 0)
    {
        @foreach (var pr in ProductService.Products)
        {
            <div class="col-md-6 col-lg-4 col-xl-3">
                <div id="product-1" class="single-product">
                    <div class="part-2">
                        <a href="#">
                            <img class="img-responsive" height="450"  alt="eCommerce Product List" src="@pr.Url" />
                        </a>
                        <a href="#"><p>@pr.Title</p></a>
                        <p href="#"><p>@pr.Description</p></p>
                        <p class="product-old-price">@pr.Price</p>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <span>Loading...</span>
    }
</div>


@code {
    private List<Product> products= new List<Product>();

    protected override async Task OnInitializedAsync()
    {
        await ProductService.GetProducts();

    }

   
}
